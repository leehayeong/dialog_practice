<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="dialogModel"
            type="com.example.dialogpractice.DialogModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_12"
        android:padding="16dp">

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@{dialogModel.message}"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="로그아웃 하시겠습니까?" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/positiveButton"
            visibleOrGone="@{dialogModel.positiveButton != null}"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_round_16"
            android:backgroundTint="#0471E9"
            android:text="@{dialogModel.positiveButton.first}"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/negativeButton"
            app:layout_constraintTop_toBottomOf="@id/message"
            app:layout_constraintVertical_bias="1"
            tools:text="예" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/negativeButton"
            visibleOrGone="@{dialogModel.negativeButton != null}"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/bg_round_16"
            android:backgroundTint="#EBEFF5"
            android:text="@{dialogModel.negativeButton.first}"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="@id/positiveButton"
            app:layout_constraintEnd_toStartOf="@id/positiveButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/positiveButton"
            app:layout_constraintVertical_bias="1"
            tools:text="아니오" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>